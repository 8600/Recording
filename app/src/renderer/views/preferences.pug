extends _extend

block head
  title 程序配置
  +stylesheet('preferences')
  +script('preferences')

block body
  +window-header(title='Preferences')
    nav.prefs-nav
      a.show-general-prefs.is-active(href)
        +icon('settings')
      a.show-advanced-prefs(href)
        +icon('tune')
  .prefs-sections
    section.js-prefs-section.settings
    section.general-prefs
      .preference.container
        .preference-part
          .preference-content
            .preference__title 保存目录
            .preference__description.js-save-to-description
          .preference-input.c-toggle
            button.button--secondary.js-choose-save 选择
      .preference.container
        .preference-part
          .preference-content
            .preference__title 自动启动
            .preference__description 随系统启动而启动
          +toggle('open-on-startup')
      .preference.container
        .preference-part
          .preference-content
            .preference__title 允许分析
            .preference__description Help us improve Kap by sending anonymous usage stats
          +toggle('allow-analytics')

    //- Advanced preferences
    section.advanced-prefs.hidden
      .preference.container
        .preference-part
          .preference-content
            .preference__title 显示鼠标
            .preference__description 在录制时显示光标
          +toggle('show-cursor')
        .preference-part
          .preference-content
            .preference__description 高亮点击
          +toggle('highlight-clicks')
      .preference.container
        .preference-part
          .preference-content
            .preference__title 录制帧数
            .preference__description 以更高的帧数录制可能会影响性能
          +range(hasLabels=true min='16' max='60' lowLabel='低' middleLabel='30FPS' highLabel='高').preference-input.fps-slider
      .preference.container
        .preference-part
          .preference-content
            .preference__title 录制音频
            .preference__description 选择输入设备
          .select-element(style="width: 17.8rem")
            select.js-audio-input-device-selector
              option(value='none') 无
